<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mauiOperationsOnObjects.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:mauiOperationsOnObjects"
    xmlns:pages="clr-namespace:mauiOperationsOnObjects.Pages"
    Shell.FlyoutBehavior="Flyout" Shell.FlyoutWidth="250" Shell.FlyoutItemIsVisible="True"
    >

    <Shell.FlyoutHeader>
        <Grid Background="#23272a">
            <Label Text="Operations" FontSize="Large" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center"></Label>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home" ContentTemplate="{DataTemplate pages:HomePage}" Route="HomePage" />
        <ShellContent Title="Add" ContentTemplate="{DataTemplate pages:AddPage}" Route="AddPage" />
        <ShellContent Title="Edit" ContentTemplate="{DataTemplate pages:EditPage}" Route="EditPage" />
        <ShellContent Title="Remove" ContentTemplate="{DataTemplate pages:RemovePage}" Route="RemovePage" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <StackLayout Background="#23272a">
            <Button Text="Exit" HorizontalOptions="Center" VerticalOptions="Center" Background="#23272a" WidthRequest="100" Margin="5"></Button>
        </StackLayout>
    </Shell.FlyoutFooter>

</Shell>
