<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiOperationsOnObjects.Pages.HomePage"
             xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
             Title="HomePage" Shell.NavBarIsVisible="False">
    <StackLayout>
        <input:AdvancedSlider x:Name="sliderAmount" Value="{Binding AmountOfColumns}" MinValue="1" MaxValue="5" StepValue="1" DisplayMinMaxValue="False"
                              Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Start" WidthRequest="500" ValuePrefix="Amount:" ValueSuffix=" Columns" ThumbColor="#99aab5"></input:AdvancedSlider>
        <Button x:Name="btnCreateTable" Text="Set amount of columns" Command="{Binding CreateTableCommand}" HorizontalOptions="Center" VerticalOptions="Start" Padding="5"></Button>
        <StackLayout x:Name="tableLayout" HorizontalOptions="Center">
            
        </StackLayout>
    </StackLayout>
</ContentPage>