<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiOperationsOnObjects.Pages.HomePage"
             xmlns:sliders="clr-namespace:Syncfusion.Maui.Sliders;assembly=Syncfusion.Maui.Sliders"
             Title="HomePage" Shell.NavBarIsVisible="False">
    <StackLayout>
        <Label Text="{Binding Source={x:Reference sliderAmount}, Path=Value, StringFormat='Set amount of columns: {0:f0}'}" 
               HorizontalOptions="Center" VerticalOptions="Start" FontSize="12"></Label>
        <sliders:SfSlider x:Name="sliderAmount" Value="{Binding AmountOfColumns}" Minimum="1" Maximum="5" Interval="1" NumberFormat="$#" MinorTicksPerInterval="0" StepSize="1"
                          ShowTicks="True" ShowLabels="False"  ShowDividers="False" Orientation="Horizontal" WidthRequest="300"></sliders:SfSlider>
        <Button x:Name="btnCreateTable" Text="Set amount of columns" Command="{Binding CreateTableCommand}" HorizontalOptions="Center" VerticalOptions="Start" Padding="5"></Button>
        <StackLayout x:Name="tableLayout" HorizontalOptions="Center">
            
        </StackLayout>
    </StackLayout>
</ContentPage>